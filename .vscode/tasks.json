{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "build-type",
            "type": "pickString",
            "description": "Build Type",
            "default": "Debug",
            "options": [
                "Debug",
                "Release",
                "RelWithDebInfo",
                "MinSizeRel"
            ]
        }
    ],
    "tasks": [
        {
            "label": "Configure (debug)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat configure Debug"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py configure Debug"
            }
        },
        {
            "label": "Configure (release)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat configure ${input:build-type}"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py configure ${input:build-type}"
            }
        },
        {
            "label": "Configure (advanced)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat configure ${input:build-type} ${input:kit-build-type} ${input:verbose}"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py configure Release"
            }
        },
        {
            "label": "Build (debug)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat build Debug"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py build Debug"
            }
        },
        {
            "label": "Build (release)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat build Release"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py build Release"
            }
        },
        {
            "label": "Build (tracing)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat build Release --tracing"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py build Release --tracing"
            }
        },
        {
            "label": "Build (verbose)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat build ${input:build-type} --verbose --no-parallel"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py build ${input:build-type} --verbose --no-parallel"
            }
        },
        {
            "label": "Build (debug)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat build Debug"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py build Debug",
            }
        },
        {
            "label": "Build (kit debug)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat build Debug --kit-debug"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py build Debug --kit-debug",
            }
        },
        {
            "label": "Build (release)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat build Release"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py build Release"
            }
        },
        {
            "label": "Build Only (debug)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat build Debug --build-only"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py build Debug --build-only"
            }
        },
        {
            "label": "Build Only (release)",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat build Release --build-only"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py build Release --build-only"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat clean ${input:build-type}"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py clean ${input:build-type}"
            }
        },
        {
            "label": "Coverage",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "echo sorry, coverage is not available on windows"
            },
            "linux": {
                "command": "scripts/generate_coverage.sh",
            }
        },
        {
            "label": "Documentation",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat documentation ${input:build-type}"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py documentation ${input:build-type}"
            }
        },
        {
            "label": "Format",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat format ${input:build-type}"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py format ${input:build-type}"
            }
        },
        {
            "label": "Lint",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat lint ${input:build-type}"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py lint ${input:build-type}"
            }
        },
        {
            "label": "Lint Fix",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat lint-fix ${input:build-type}"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py lint-fix ${input:build-type}"
            }
        },
        {
            "label": "Dependency Graph",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "problemMatcher": "$msCompile",
                "command": "scripts/vscode_build_launcher.bat dependency-graph ${input:build-type}"
            },
            "linux": {
                "command": "python3 scripts/vscode_build.py dependency-graph ${input:build-type}"
            }
        }
    ]
}
